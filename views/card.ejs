<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="../stylesheets/card.css" />
  </head>
  <body>
    <div class="Main_Card_div">
      <% CardData.forEach(function(card) { %>
      <div class="Card_div">
        <div class="Card_div_imagebox">
          <img
            src="https://ik.imagekit.io/dev24/<%= card.Dish_Image %>"
            alt="<%= card.Dish_Name %>"
          />
        </div>
        <div class="Card_div_content_div">
          <div class="Card_div_content">
            <h3 class="Card_div_content_h3"><%= card.Dish_Name %></h3>
            <p class="Card_div_content_p"><%= card.Dish_Descrption %></p>
          </div>
          <div class="Card_div_price_div">
            <h2><%= card.Dish_Amount %> $</h2>
          </div>
        </div>
        <div class="Card_div_rating_div">
          <span class="Card_div_rating_div_plus">
            <i class="bi bi-plus-square-fill"></i>
          </span>
          <div class="Card_div_rating_div_star">
            <% for (let i = 0; i < card.rating; i++) { %>
            <i class="bi bi-star-fill"></i>
            <% } %>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </body>
</html>
